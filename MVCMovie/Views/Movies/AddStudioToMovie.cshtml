@model MvcMovie.Models.Movie

<h2>Adicionar Estúdio a Filme</h2>

<form asp-action="AddStudioToMovie">
    <div class="form-group">
        <label for="studioId">Selecione o Estúdio:</label>
        <select asp-for="StudioId" asp-items="@ViewBag.Studios" class="form-control">
            <option value="">Selecione...</option>
        </select>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Adicionar Estúdio</button>
</form>